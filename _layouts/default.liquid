---
layout: base
---
<header>
    {% include 'navPrimary' %}
    <h1>Company Name</h1>
</header>
<main>
    {% if secondary %}
    <aside>
        {% include 'navSecondary' %}
    </aside>
    {% endif %}
    <div>
        <section aria-labelledby="{{ title | remove: ' ' }}">
            <h2 id="{{ title | remove: ' ' }}">{{ title }}</h2>
            {% if description %}<p>{{ description }}</p>{% endif %}
            {{ content }}
        </section>
        {% if aside %}
        {% include 'aside' %}
        {% endif %}
    </div>
</main>
<footer>
    {% include 'subscribe' %}
    {% include 'navFooter' %}
    {% include 'copyright' %}
</footer>